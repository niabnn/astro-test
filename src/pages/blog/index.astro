---
interface WPPost {
  slug: string;
  title: { rendered: string };
  content: { rendered: string };
  _embedded?: {
    "wp:featuredmedia"?: { source_url: string }[];
  };
}
import "@/styles/globals.css";
import BlogsCardsGrid from "@/components/BlogsCardsGrid.astro";
import CarouselHero from "@/components/CarouselHero.astro";
const res = await fetch(
  "https://wp.tusanagustin.com/wp/wp-json/wp/v2/posts?_embed",
  { cache: "no-store" }
);

const posts: WPPost[] = await res.json();
---

<meta charset="UTF-8" />
<div class="bg-background py-16 md:py-24">
  <div class="container mx-auto px-4 2xl:max-w-[1400px]">
    {/* Section header */}
    <div class="mb-12 text-center md:mb-16">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
        Blogs
      </h2>
      <p class="text-muted-foreground mx-auto mt-4 max-w-2xl">
        Explora nuestros blogs m√°s recientes y descubre contenido interesante
        sobre diversos temas.
      </p>
    </div>
  </div>
</div>
<CarouselHero />
<BlogsCardsGrid />
<section class="max-w-7xl mx-auto px-4 py-12"></section>
